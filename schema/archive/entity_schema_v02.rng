                        <input>textArea</input>
                    </interface-field>

                    <interface-field path="entity/person|organization/description/existDates/dateRange/fromDate/note">
                        <help-text xml:lang="en">Enter one or more notes about
                            this date.</help-text>
                        <label xml:lang="en">Note</label>
                        <input>textArea</input>
                    </interface-field>
                    
                    <interface-field path="entity/person|organization/description/existDates/dateRange/toDate/note">
