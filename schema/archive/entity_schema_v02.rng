    <define name="standardDate-element">
        <element name="standardDate">

            <xs:annotation>
                <xs:appinfo>

                    <interface-field
                        path="entity/person|organization/description/existDates/dateSingle/standardDate">
                        <help-text xml:lang="en">Select a date from date picker
